<% content_for :title, "Section Details" %>

<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-8">
    <!-- Section Header -->
    <div class="border-b border-gray-200 pb-6 mb-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <%= @section.course.prefix.code %> <%= @section.course.number %> - <%= @section.name %>
      </h1>
      <p class="text-xl text-gray-600 mb-2">
        <%= @section.course.title %>
      </p>
      <p class="text-gray-500">
        <%= pluralize(@section.course.credit_hours, 'credit hour') %>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Course Information -->
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Course Information</h2>
        
        <div class="space-y-3 mb-6">
          <div>
            <span class="font-medium text-gray-700">Course:</span>
            <%= link_to course_path(@section.course), 
                class: "text-blue-600 hover:text-blue-800 ml-2" do %>
              <%= @section.course.prefix.code %> <%= @section.course.number %> - <%= @section.course.title %>
            <% end %>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Section:</span>
            <span class="text-gray-900 ml-2"><%= @section.name %></span>
          </div>
        </div>

        <!-- Course Syllabus -->
        <% if @section.course.syllabus.present? %>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Course Syllabus</h3>
            <div class="bg-gray-50 rounded-md p-4 prose max-w-none text-sm">
              <%= simple_format(@section.course.syllabus) %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Enrolled Students -->
      <div>
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold text-gray-900">
            Enrolled Students (<%= @section.students.count %>)
          </h2>
        </div>
        
        <% if @section.students.any? %>
          <div class="space-y-2 mb-6">
            <% @section.students.order(:last_name, :first_name).each do |student| %>
              <div class="flex items-center justify-between bg-gray-50 rounded-md p-3">
                <div>
                  <%= link_to student_path(student), 
                      class: "text-blue-600 hover:text-blue-800 font-medium" do %>
                    <%= student.last_name %>, <%= student.first_name %>
                  <% end %>
                  <div class="text-sm text-gray-500">
                    <%= student.email %>
                  </div>
                </div>
                <div class="text-sm text-gray-500">
                  ID: <%= student.student_id %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 bg-gray-50 rounded-md p-4 mb-6">
            No students enrolled in this section yet.
          </p>
        <% end %>

        <!-- Available Students -->
        <% if @available_students.any? %>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Available Students</h3>
            <div class="bg-blue-50 rounded-md p-4">
              <p class="text-sm text-blue-700 mb-2">
                <%= pluralize(@available_students.count, 'student') %> available for enrollment.
              </p>
              <p class="text-xs text-blue-600">
                Use "Edit Section" to manage student enrollments.
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex flex-wrap gap-3 pt-6 border-t border-gray-200">
      <%= link_to 'Edit Section', edit_section_path(@section), 
          class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors" %>
      <%= link_to 'View Course', course_path(@section.course), 
          class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors" %>
      <%= link_to 'All Sections', sections_path, 
          class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors" %>
      <%= link_to 'Delete Section', section_path(@section), method: :delete,
          confirm: 'Are you sure? This will unenroll all students from this section.',
          class: "bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors" %>
    </div>
  </div>
</div>