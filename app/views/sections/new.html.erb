<% content_for :title, "New Section" %>

<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Create New Section</h1>

    <%= form_with(model: @section, local: true, class: "space-y-6") do |form| %>
      <% if @section.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h2 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @section.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :course_id, "Course", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :course_id, 
            options_from_collection_for_select(@courses, :id, :display_name, params[:course_id] || @section.course_id),
            { prompt: "Select a course..." },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div>
        <%= form.label :name, "Section Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "e.g. Section 001, Morning Lab, Online Section" %>
        <p class="mt-1 text-sm text-gray-500">Enter a unique identifier for this section</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Enroll Students (Optional)</label>
        <div class="max-h-48 overflow-y-auto border border-gray-300 rounded-md p-3">
          <% if @students.any? %>
            <% @students.order(:last_name, :first_name).each do |student| %>
              <div class="flex items-center mb-2">
                <%= check_box_tag "section[student_ids][]", student.id, false, 
                    id: "section_student_ids_#{student.id}",
                    class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                <%= label_tag "section_student_ids_#{student.id}", 
                    "#{student.last_name}, #{student.first_name} (#{student.student_id})",
                    class: "ml-2 text-sm text-gray-900 cursor-pointer" %>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-sm">No students available. <%= link_to "Create a student", new_student_path, class: "text-blue-600 hover:text-blue-800" %> first.</p>
          <% end %>
        </div>
        <p class="mt-1 text-sm text-gray-500">Select students to enroll in this section</p>
      </div>

      <div class="flex gap-3 pt-6">
        <%= form.submit "Create Section", 
            class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors font-medium" %>
        <%= link_to 'Cancel', sections_path, 
            class: "bg-gray-300 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-400 transition-colors font-medium" %>
      </div>
    <% end %>
  </div>
</div>