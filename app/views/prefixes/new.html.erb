<% content_for :title, "New Prefix" %>

<div class="max-w-lg mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Create New Prefix</h1>

    <%= form_with(model: @prefix, local: true, class: "space-y-6") do |form| %>
      <% if @prefix.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h2 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@prefix.errors.count, "error") %> prohibited this prefix from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @prefix.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :code, "Prefix Code", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :code, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "e.g. CS, MATH, ENGL",
            style: "text-transform: uppercase;" %>
        <p class="mt-1 text-sm text-gray-500">2-4 letter abbreviation (will be converted to uppercase)</p>
      </div>

      <div>
        <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :description, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "e.g. Computer Science, Mathematics, English" %>
        <p class="mt-1 text-sm text-gray-500">Full department or subject area name</p>
      </div>

      <div class="flex gap-3 pt-6">
        <%= form.submit "Create Prefix", 
            class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors font-medium" %>
        <%= link_to 'Cancel', prefixes_path, 
            class: "bg-gray-300 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-400 transition-colors font-medium" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const codeField = document.querySelector('#prefix_code');
  if (codeField) {
    codeField.addEventListener('input', function(e) {
      e.target.value = e.target.value.toUpperCase();
    });
  }
});
</script>