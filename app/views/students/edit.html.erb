<% content_for :title, "Edit Student" %>

<div class="max-w-lg mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">
      Edit Student: <%= @student.first_name %> <%= @student.last_name %>
    </h1>

    <%= form_with(model: @student, local: true, class: "space-y-6") do |form| %>
      <% if @student.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <h2 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @student.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :first_name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Enter first name" %>
      </div>

      <div>
        <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :last_name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Enter last name" %>
      </div>

      <div>
        <%= form.label :student_id, "Student ID", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :student_id, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "e.g. S001234567" %>
        <p class="mt-1 text-sm text-gray-500">Unique identifier for the student</p>
      </div>

      <div>
        <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.email_field :email, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "student@example.com" %>
      </div>

      <% if @student.sections.any? %>
        <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
          <h3 class="text-blue-800 font-semibold mb-2">Current Enrollments</h3>
          <div class="space-y-1">
            <% @student.sections.includes(course: :prefix).each do |section| %>
              <div class="text-sm text-blue-700">
                â€¢ <%= section.course.prefix.code %> <%= section.course.number %> - <%= section.name %>
              </div>
            <% end %>
          </div>
          <p class="text-xs text-blue-600 mt-2">
            To change enrollments, edit individual sections or create new sections.
          </p>
        </div>
      <% end %>

      <div class="flex gap-3 pt-6">
        <%= form.submit "Update Student", 
            class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors font-medium" %>
        <%= link_to 'View Student', @student, 
            class: "bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 transition-colors font-medium" %>
        <%= link_to 'Cancel', @student, 
            class: "bg-gray-300 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-400 transition-colors font-medium" %>
      </div>
    <% end %>
  </div>
</div>