<% content_for :title, "Student Details" %>

<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-8">
    <!-- Student Header -->
    <div class="border-b border-gray-200 pb-6 mb-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <%= @student.first_name %> <%= @student.last_name %>
      </h1>
      <p class="text-gray-600">
        Student ID: <%= @student.student_id %>
      </p>
      <p class="text-gray-600">
        <%= mail_to @student.email, @student.email, class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Student Information -->
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Student Information</h2>
        
        <div class="space-y-3">
          <div>
            <span class="font-medium text-gray-700">Name:</span>
            <span class="text-gray-900 ml-2"><%= @student.first_name %> <%= @student.last_name %></span>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Student ID:</span>
            <span class="text-gray-900 ml-2"><%= @student.student_id %></span>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Email:</span>
            <span class="text-gray-900 ml-2">
              <%= mail_to @student.email, @student.email, class: "text-blue-600 hover:text-blue-800" %>
            </span>
          </div>
        </div>
      </div>

      <!-- Enrolled Sections -->
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          Enrolled Sections (<%= @student.sections.count %>)
        </h2>
        
        <% if @student.sections.any? %>
          <div class="space-y-3">
            <% @student.sections.includes(course: :prefix).each do |section| %>
              <div class="bg-gray-50 rounded-md p-4">
                <div class="flex justify-between items-start">
                  <div>
                    <%= link_to section_path(section), 
                        class: "text-blue-600 hover:text-blue-800 font-medium" do %>
                      <%= section.course.prefix.code %> <%= section.course.number %> - <%= section.name %>
                    <% end %>
                    <p class="text-gray-600 text-sm mt-1">
                      <%= section.course.title %>
                    </p>
                    <p class="text-gray-500 text-xs mt-1">
                      <%= pluralize(section.course.credit_hours, 'credit hour') %>
                    </p>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= pluralize(section.students.count, 'student') %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Total Credit Hours -->
          <div class="mt-6 p-4 bg-blue-50 rounded-md">
            <div class="flex justify-between items-center">
              <span class="font-medium text-blue-900">Total Credit Hours:</span>
              <span class="font-bold text-blue-900">
                <%= @student.sections.joins(:course).sum('courses.credit_hours') %>
              </span>
            </div>
          </div>
        <% else %>
          <div class="bg-gray-50 rounded-md p-4">
            <p class="text-gray-500">This student is not enrolled in any sections.</p>
            <p class="text-sm text-gray-400 mt-2">
              Enroll this student by editing course sections or creating new sections.
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex flex-wrap gap-3 pt-6 border-t border-gray-200">
      <%= link_to 'Edit Student', edit_student_path(@student), 
          class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors" %>
      
      <% if @student.sections.any? %>
        <% available_sections = Section.where.not(id: @student.section_ids) %>
        <% if available_sections.any? %>
          <%= link_to 'Enroll in More Sections', sections_path, 
              class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors" %>
        <% end %>
      <% else %>
        <%= link_to 'Enroll in Sections', sections_path, 
            class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors" %>
      <% end %>

      <%= link_to 'All Students', students_path, 
          class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors" %>
      
      <%= link_to 'Delete Student', student_path(@student), method: :delete,
          confirm: 'Are you sure? This will unenroll the student from all sections.',
          class: "bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors" %>
    </div>
  </div>
</div>